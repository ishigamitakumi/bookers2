<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'User info', user: @user%>
      <%= render 'New book', book: @newbook%>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Book detail</h2>
     <table class='table'>
      <thead>
        <tr>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image("40x40") %><br>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to 'Edit',edit_book_path(@book.id),class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy',book_path(@book.id),method: :delete,class: "btn btn-sm btn-danger",data: { confirm: "本当に消しますか？" } %></td>
          <% end %>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>
