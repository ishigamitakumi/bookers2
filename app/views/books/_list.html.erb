<h2>User info</h2>
 <p>投稿ユーザー画像：<%= image_tag user.get_profile_image("100x100") %></p>

 <h3>name</h3>
 <h3><%= user.name %></h3>
 <h3>introduction</h3>
 <h3><%= user.introduction %></h3>

 <%= link_to "user_edit", edit_user_path(user.id) %>

<h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>